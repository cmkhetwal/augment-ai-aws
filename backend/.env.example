# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aws-monitor

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Server Configuration
PORT=3001
NODE_ENV=production

# Single Account AWS Configuration (for single-account deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Multi-Account AWS Configuration (for multi-account deployment)
# Bamkom Account
BAMKOM_AWS_ACCESS_KEY_ID=your-bamkom-access-key
BAMKOM_AWS_SECRET_ACCESS_KEY=your-bamkom-secret-key
BAMKOM_AWS_REGION=us-east-1

# Unified Account
UNIFIED_AWS_ACCESS_KEY_ID=your-unified-access-key
UNIFIED_AWS_SECRET_ACCESS_KEY=your-unified-secret-key
UNIFIED_AWS_REGION=us-east-1

# Alternative naming for second account (fallback)
AWS_ACCESS_KEY_ID_2=your-second-account-access-key
AWS_SECRET_ACCESS_KEY_2=your-second-account-secret-key

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@admin.com
ADMIN_PASSWORD=Admin@123

# Notification Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# SSO Configuration (Optional)
SSO_ENABLED=false
SAML_ENTRY_POINT=https://your-idp.com/sso/saml
SAML_ISSUER=your-app-name
SAML_CERT=your-saml-certificate